{% extends 'layout/layout.twig' %}

{% block content %}
<div class="row">
    <h1>ログイン画面</h1>
    <p>{{ message }}</p>
    <form action="/auth/login" method='post'>
        <table border="0">
            <tr>
                <td align="right"><b>ログイン名</b></td>
                <td><input type="text" name="login_id" placeholder="ログイン名" value={{ inputs['login_id'] }}></input></td>
            </tr>

            <tr>
                <td align="right"><b>パスワード</b></td>
                <td><input type="password" name="password" placeholder="パスワード" value={{ inputs['password'] }}></input></td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="送信"></td>
            </tr>
        </table>
    </form>
</div>
{% endblock content %}
